{
  "files.exclude": {
    ".git/": true,
    "node_modules/": true,
    "public/": false
  },
  "search.exclude": {
    "**/.cache": true,
    "**/node_modules": true,
    "**/public": true,
  },
  "editor.tabSize": 2,
  "eslint.validate": [
    {
      "language": "javascript",
      "autoFix": true
    },
    {
      "language": "typescript",
      "autoFix": true
    }
  ],
  "debug.node.autoAttach": "on",
  "editor.formatOnSave": true,
  "editor.insertSpaces": true
}